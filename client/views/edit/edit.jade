h3 {{goalEdit.name}}
.row
  .col-xs-3
    form(role='form', novalidate, name='foodForm')
      .form-group
        label(for='name') Food
        input.form-control#name(type='text', name='name', ng-model='food.name', autofocus, required)
      .form-group
        label(for='calories') Calories
        input.form-control#calories(type='number', name='calories', ng-model='food.calories', required)
      button.btn.btn-primary(ng-show='foodForm.$valid', ng-click='addFood()') Add Food

    table.table.table-bordered
      thead
        tr
          th Food
          th Calories
      tbody
        tr(ng-repeat='food in foods')
          td {{food.name}}
          td {{food.calories}}

.row
  .col-xs-3
    form(role='form', novalidate, name='activityForm')
      .form-group
        label(for='miles') Miles
        input.form-control#miles(type='number', name='exercise', ng-model='exercise.miles', required)
      button.btn.btn-primary(ng-show='activityForm.$valid', ng-click='addRun()') Add Run
      button.btn.btn-primary(ng-show='activityForm.$valid', ng-click='addWalk()') Add Walk

.row
  .col-xs-2
  .col-xs-8
    h3 Running
    table.table.table-bordered(ng-show='runs')
      thead
        tr
          th Time (minutes)
          th Miles Ran
      tbody
        tr(ng-repeat='r in runs')
          td {{(r.time || 0) + ' Minutes' || ''}}
          td {{r.miles + ' Miles'}}
    h3 Walking
    table.table.table-bordered(ng-show='walks')
      thead
        tr
          th Time (minutes)
          th Miles Walked
      tbody
        tr(ng-repeat='w in walks')
          td {{(w.time || 0) + ' Minutes' || ''}}
          td {{w.miles + ' Miles'}}
  .col-xs-2
